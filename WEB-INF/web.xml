<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="https://jakarta.ee/xml/ns/jakartaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="https://jakarta.ee/xml/ns/jakartaee https://jakarta.ee/xml/ns/jakartaee/web-app_6_0.xsd"
         version="6.0">

    <!-- BOOKING MAIN /booking -->
    <servlet>
        <servlet-name>BookingMain</servlet-name>
        <jsp-file>/booking/booking.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>BookingMain</servlet-name>
        <url-pattern>/booking</url-pattern>
    </servlet-mapping>

    <!-- /booking/individual -->
    <servlet>
        <servlet-name>BookingIndividual</servlet-name>
        <jsp-file>/booking/individual.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>BookingIndividual</servlet-name>
        <url-pattern>/booking/individual</url-pattern>
    </servlet-mapping>

    <!-- /booking/group -->
    <servlet>
        <servlet-name>BookingGroup</servlet-name>
        <jsp-file>/booking/group.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>BookingGroup</servlet-name>
        <url-pattern>/booking/group</url-pattern>
    </servlet-mapping>

    <!-- /booking/vip -->
    <servlet>
        <servlet-name>BookingVip</servlet-name>
        <jsp-file>/booking/vip.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>BookingVip</servlet-name>
        <url-pattern>/booking/vip</url-pattern>
    </servlet-mapping>

    <!-- /booking/time -->
    <servlet>
        <servlet-name>BookingTime</servlet-name>
        <jsp-file>/booking/time.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>BookingTime</servlet-name>
        <url-pattern>/booking/time</url-pattern>
    </servlet-mapping>

    <!-- /booking/payment -->
    <servlet>
        <servlet-name>BookingPayment</servlet-name>
        <jsp-file>/booking/payment.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>BookingPayment</servlet-name>
        <url-pattern>/booking/payment</url-pattern>
    </servlet-mapping>

    <!-- Location -->
    <servlet>
        <servlet-name>LocationPage</servlet-name>
        <jsp-file>/location.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>LocationPage</servlet-name>
        <url-pattern>/location</url-pattern>
    </servlet-mapping>

    <!-- About -->
    <servlet>
        <servlet-name>AboutPage</servlet-name>
        <jsp-file>/about.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>AboutPage</servlet-name>
        <url-pattern>/about</url-pattern>
    </servlet-mapping>

    <!-- Reservation -->
    <servlet>
        <servlet-name>ReservationPage</servlet-name>
        <jsp-file>/reservation.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>ReservationPage</servlet-name>
        <url-pattern>/reservation</url-pattern>
    </servlet-mapping>

    <!-- Login -->
    <servlet>
        <servlet-name>LoginPage</servlet-name>
        <jsp-file>/login.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginPage</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>

    <!-- Register -->
    <servlet>
        <servlet-name>RegisterPage</servlet-name>
        <jsp-file>/register.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>RegisterPage</servlet-name>
        <url-pattern>/register</url-pattern>
    </servlet-mapping>

 <!-- /booking/uploadProof -->
<servlet>
    <servlet-name>UploadProof</servlet-name>
    <jsp-file>/booking/uploadProof.jsp</jsp-file>
</servlet>
<servlet-mapping>
    <servlet-name>UploadProof</servlet-name>
    <url-pattern>/booking/uploadProof</url-pattern>
</servlet-mapping>

<!-- Cancel Booking -->
<servlet>
    <servlet-name>CancelBooking</servlet-name>
    <jsp-file>/booking/cancelBooking.jsp</jsp-file>
</servlet>
<servlet-mapping>
    <servlet-name>CancelBooking</servlet-name>
    <url-pattern>/booking/cancel</url-pattern>
</servlet-mapping>

<!-- Begin Change Booking -->
<servlet>
    <servlet-name>BeginChangeBooking</servlet-name>
    <jsp-file>/booking/beginChange.jsp</jsp-file>
</servlet>
<servlet-mapping>
    <servlet-name>BeginChangeBooking</servlet-name>
    <url-pattern>/booking/change</url-pattern>
</servlet-mapping>

<servlet>
    <servlet-name>UpdateBookingServlet</servlet-name>
    <servlet-class>servlet.UpdateBookingServlet</servlet-class>
</servlet>

<servlet-mapping>
    <servlet-name>UpdateBookingServlet</servlet-name>
    <url-pattern>/UpdateBookingServlet</url-pattern>
</servlet-mapping>





    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>

</web-app>
